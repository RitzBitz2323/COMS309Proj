<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTechHomeTicket"
    android:background="#2B2B2B">

    <TextView
        android:id="@+id/description_ViewUserTicketActivity"
        android:layout_width="316dp"
        android:layout_height="134dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/address_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/address_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/address_ViewUserTicketActivity"
        android:layout_width="319dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:text="Address"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Category_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/Category_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/Category_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Category"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/username_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/username_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/username_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/UserFullName_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/UserFullName_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/UserFullName_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="UserFullName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/TicketTitle_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/TicketTitle_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/TicketTitle_ViewUserTicketActivity"
        android:layout_width="329dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Ticket Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_Button_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/red_main"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_highlight"
        android:text="Close Ticket"
        app:layout_constraintBottom_toTopOf="@+id/back_Button_ViewUserTicketActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="0.87"
        android:onClick="closeTicket"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:onClick="openChat"
        android:text="Open Chat"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="0.84" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="showDirections"
        android:text="Show Directions"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="0.58" />

</androidx.constraintlayout.widget.ConstraintLayout>