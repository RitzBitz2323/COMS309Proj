<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    tools:context=".ViewUserTicketActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="11dp">

    <Button
        android:id="@+id/back_Button_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Chat_Button_ViewUserTicketActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/techUsername_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tech_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Technician:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/techFullName_ViewUserTicketActivity"
        app:layout_constraintStart_toStartOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/techUsername_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TechUsername"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/techFullName_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/techFullName_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="TechFullName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/description_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/description_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/description_ViewUserTicketActivity"
        android:layout_width="319dp"
        android:layout_height="190dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/address_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/address_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/address_ViewUserTicketActivity"
        android:layout_width="319dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:text="Address"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Category_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/Category_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/Category_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Category"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/username_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/username_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/username_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/UserFullName_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/UserFullName_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/UserFullName_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="UserFullName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/TicketTitle_ViewUserTicketActivity"
        app:layout_constraintTop_toBottomOf="@+id/TicketTitle_ViewUserTicketActivity" />

    <TextView
        android:id="@+id/TicketTitle_ViewUserTicketActivity"
        android:layout_width="329dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Ticket Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Chat_Button_ViewUserTicketActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/techUsername_ViewUserTicketActivity"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>